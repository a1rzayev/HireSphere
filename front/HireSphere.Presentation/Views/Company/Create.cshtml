@model HireSphere.Presentation.Models.CompanyViewModel
@{
    ViewData["Title"] = "Create Company";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-plus-circle fa-2x me-3"></i>
                        <div>
                            <h3 class="mb-0">Create New Company</h3>
                            <p class="mb-0">Add a new company to the platform</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div class="row">
                            <!-- Company Information -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-building me-2"></i>Company Information
                                </h5>

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-building"></i>
                                        </span>
                                        <input asp-for="Name" class="form-control" placeholder="Enter company name" />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your company, mission, and values..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <div class="form-text">Tell potential employees about your company culture and opportunities.</div>
                                </div>
                            </div>

                            <!-- Contact & Details -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Contact & Details
                                </h5>

                                <div class="mb-3">
                                    <label asp-for="Website" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-globe"></i>
                                        </span>
                                        <input asp-for="Website" class="form-control" placeholder="https://yourcompany.com" />
                                    </div>
                                    <span asp-validation-for="Website" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </span>
                                        <input asp-for="Location" class="form-control" placeholder="e.g., New York, NY or Remote" />
                                    </div>
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LogoUrl" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-image"></i>
                                        </span>
                                        <input asp-for="LogoUrl" class="form-control" placeholder="https://example.com/logo.png" />
                                    </div>
                                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                                    <div class="form-text">Optional: Add your company logo URL for better branding.</div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Companies
                                    </a>
                                    
                                    <div>
                                        <button type="reset" class="btn btn-outline-warning me-2">
                                            <i class="fas fa-undo me-2"></i>Reset
                                        </button>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-2"></i>Create Company
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
