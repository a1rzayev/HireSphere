@model HireSphere.Adminpanel.Models.JobSeekerDashboardViewModel
@{
    ViewData["Title"] = "Job Seeker Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-tie me-2"></i>Job Seeker Dashboard</h2>
    <div>
        <a href="@Url.Action("BrowseJobs", "JobSeeker")" class="btn btn-primary">
            <i class="fas fa-search me-1"></i>Browse Jobs
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.TotalApplications</h4>
                        <p class="card-text">Total Applications</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.PendingApplications</h4>
                        <p class="card-text">Pending Applications</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.ApprovedApplications</h4>
                        <p class="card-text">Approved Applications</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.RejectedApplications</h4>
                        <p class="card-text">Rejected Applications</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <h3 class="mb-3">Quick Actions</h3>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-search fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Browse Jobs</h5>
                        <p class="card-text">Search and discover job opportunities that match your skills.</p>
                        <a href="@Url.Action("BrowseJobs", "JobSeeker")" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-1"></i>Browse Jobs
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-list fa-3x text-success mb-3"></i>
                        <h5 class="card-title">My Applications</h5>
                        <p class="card-text">Track and manage your job applications and their status.</p>
                        <a href="@Url.Action("MyApplications", "JobSeeker")" class="btn btn-success">
                            <i class="fas fa-arrow-right me-1"></i>View Applications
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-user fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Profile Settings</h5>
                        <p class="card-text">Update your profile information and preferences.</p>
                        <a href="#" class="btn btn-warning">
                            <i class="fas fa-arrow-right me-1"></i>Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Recent Applications</h5>
            </div>
            <div class="card-body">
                @if (Model.Applications.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var app in Model.Applications.Take(5))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@app.JobTitle</h6>
                                    <small class="text-muted">@app.CompanyName</small>
                                </div>
                                <span class="badge @(app.Status switch {
                                    "Pending" => "bg-warning",
                                    "Approved" => "bg-success",
                                    "Rejected" => "bg-danger",
                                    _ => "bg-secondary"
                                })">
                                    @app.Status
                                </span>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("MyApplications", "JobSeeker")" class="btn btn-outline-primary btn-sm">
                            View All Applications
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No applications yet.</p>
                    <div class="text-center">
                        <a href="@Url.Action("BrowseJobs", "JobSeeker")" class="btn btn-primary btn-sm">
                            Start Applying
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>Recommended Jobs</h5>
            </div>
            <div class="card-body">
                @if (Model.RecommendedJobs.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var job in Model.RecommendedJobs.Take(5))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@job.Title</h6>
                                    <small class="text-muted">@job.CompanyName - @job.Location</small>
                                </div>
                                <a href="@Url.Action("Details", "Job", new { id = job.Id })" class="btn btn-outline-primary btn-sm">
                                    View
                                </a>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("BrowseJobs", "JobSeeker")" class="btn btn-outline-primary btn-sm">
                            Browse All Jobs
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No recommended jobs available.</p>
                    <div class="text-center">
                        <a href="@Url.Action("BrowseJobs", "JobSeeker")" class="btn btn-primary btn-sm">
                            Browse Jobs
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
