@model HireSphere.Adminpanel.Models.JobViewModel
@{
    ViewData["Title"] = "Job Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-briefcase me-2"></i>Job Details</h2>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i>Back to Jobs
        </a>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Edit Job
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Job Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Job Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h3 class="mb-2">@Model.Title</h3>
                        <p class="text-muted mb-3">
                            <i class="fas fa-building me-1"></i>@Model.CompanyName
                            @if (!string.IsNullOrEmpty(Model.Location))
                            {
                                <span class="ms-3"><i class="fas fa-map-marker-alt me-1"></i>@Model.Location</span>
                            }
                            @if (Model.IsRemote)
                            {
                                <span class="ms-3"><i class="fas fa-home me-1"></i>Remote</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <span class="badge bg-@(Model.IsActive ? "success" : "danger") fs-6">@Model.Status</span>
                        <div class="mt-2">
                            <span class="badge bg-secondary">@Model.JobType</span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Salary Range:</strong>
                        <p class="mb-0">@Model.SalaryRange</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Category:</strong>
                        <p class="mb-0">@Model.CategoryName</p>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Posted:</strong>
                        <p class="mb-0">@Model.PostedAt.ToString("MMMM dd, yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Expires:</strong>
                        <p class="mb-0">@Model.ExpiresAt.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Job Description -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Job Description</h5>
            </div>
            <div class="card-body">
                <div class="job-description">
                    @Html.Raw(Model.Description.Replace("\n", "<br>"))
                </div>
            </div>
        </div>
        
        <!-- Requirements -->
        @if (!string.IsNullOrEmpty(Model.Requirements))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Requirements</h5>
                </div>
                <div class="card-body">
                    <div class="requirements">
                        @Html.Raw(Model.Requirements.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>
        }
        
        <!-- Tags -->
        @if (Model.Tags.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Tags</h5>
                </div>
                <div class="card-body">
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-light text-dark me-2 mb-2">@tag</span>
                    }
                </div>
            </div>
        }
    </div>
    
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Index", "JobApplication", new { jobId = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-file-alt me-1"></i>View Applications (@Model.ApplicationCount)
                    </a>
                    
                    <form method="post" action="@Url.Action("ToggleStatus", new { id = Model.Id })" class="d-inline">
                        <button type="submit" class="btn btn-@(Model.IsActive ? "warning" : "success") w-100"
                                onclick="return confirm('Are you sure you want to @(Model.IsActive ? "deactivate" : "activate") this job?')">
                            <i class="fas fa-@(Model.IsActive ? "pause" : "play") me-1"></i>
                            @(Model.IsActive ? "Deactivate" : "Activate") Job
                        </button>
                    </form>
                    
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-warning">
                        <i class="fas fa-edit me-1"></i>Edit Job
                    </a>
                    
                    <form method="post" action="@Url.Action("Delete", new { id = Model.Id })" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger w-100"
                                onclick="return confirm('Are you sure you want to delete this job? This action cannot be undone.')">
                            <i class="fas fa-trash me-1"></i>Delete Job
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Job Statistics -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Job Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary mb-1">@Model.ApplicationCount</h4>
                            <small class="text-muted">Applications</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-@(Model.IsActive ? "success" : "danger") mb-1">@Model.Status</h4>
                        <small class="text-muted">Status</small>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Job Details -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info me-2"></i>Job Details</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <td><strong>Job ID:</strong></td>
                        <td><code>@Model.Id</code></td>
                    </tr>
                    <tr>
                        <td><strong>Company ID:</strong></td>
                        <td><code>@Model.CompanyId</code></td>
                    </tr>
                    <tr>
                        <td><strong>Category ID:</strong></td>
                        <td><code>@Model.CategoryId</code></td>
                    </tr>
                    <tr>
                        <td><strong>Posted At:</strong></td>
                        <td>@Model.PostedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                    <tr>
                        <td><strong>Expires At:</strong></td>
                        <td>@Model.ExpiresAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
