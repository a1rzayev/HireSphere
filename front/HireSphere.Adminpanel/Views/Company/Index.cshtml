@model List<HireSphere.Adminpanel.Models.CompanyViewModel>
@{
    ViewData["Title"] = "Companies Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title">
                            <i class="fas fa-building me-2"></i>Companies Management
                        </h3>
                        <div>
                            <a href="@Url.Action("Create", "Company")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Create New Company
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model?.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Website</th>
                                        <th>Location</th>
                                        <th>Logo</th>
                                        <th>Owner ID</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var company in Model ?? new List<CompanyViewModel>())
                                    {
                                        if (company != null)
                                        {
                                            var companyId = company.Id.ToString();
                                            var ownerId = company.OwnerUserId.ToString();
                                        
                                        <tr>
                                            <td>
                                                <small class="text-muted">@companyId</small>
                                            </td>
                                            <td>
                                                <strong>@company.Name</strong>
                                            </td>
                                            <td>
                                                <span title="@(company.Description ?? "No description")">
                                                    @company.TruncatedDescription
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(company.Website))
                                                {
                                                    <a href="@company.Website" target="_blank" class="text-decoration-none">
                                                        <i class="fas fa-external-link-alt me-1"></i>@company.DisplayWebsite
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @company.DisplayLocation
                                            </td>
                                            <td>
                                                @if (company.HasLogo)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-image me-1"></i>Yes
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times me-1"></i>No
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@ownerId</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @company.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (!string.IsNullOrEmpty(companyId))
                                                    {
                                                        <a href="@Url.Action("Details", "Company", new { id = companyId })" 
                                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="@Url.Action("Edit", "Company", new { id = companyId })" 
                                                           class="btn btn-sm btn-outline-warning" title="Edit Company">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                                onclick="confirmDelete('@companyId', '@company.Name')" title="Delete Company">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Invalid ID</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-building fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">@(Model == null ? "Error loading companies" : "No companies found")</h5>
                            <p class="text-muted">@(Model == null ? "There was an error loading the companies data." : "There are currently no companies in the system.")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete company <strong id="deleteCompanyName"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete Company</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(companyId, companyName) {
            document.getElementById('deleteCompanyName').textContent = companyName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Company")/' + companyId;
            
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
