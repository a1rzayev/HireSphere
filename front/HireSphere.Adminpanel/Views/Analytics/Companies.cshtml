@model HireSphere.Adminpanel.Models.CompanyAnalyticsViewModel
@{
    ViewData["Title"] = "Company Analytics";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building me-2"></i>Company Analytics</h2>
    <div>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-primary me-2">
            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
        </a>
        <a href="@Url.Action("Index", "Company")" class="btn btn-outline-secondary">
            <i class="fas fa-list me-1"></i>Manage Companies
        </a>
    </div>
</div>

<!-- Company Statistics Overview -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-1">@Model.Statistics.TotalCompanies</h4>
                        <p class="mb-0">Total Companies</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-building fa-2x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small>+@Model.Statistics.NewCompaniesThisMonth this month</small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-1">@Model.Statistics.VerifiedCompanies</h4>
                        <p class="mb-0">Verified Companies</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small>@Model.Statistics.UnverifiedCompanies unverified</small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-1">@Model.Statistics.NewCompaniesThisWeek</h4>
                        <p class="mb-0">New This Week</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-plus-circle fa-2x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small>Recent registrations</small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-1">@Model.Statistics.LocationCounts.Count</h4>
                        <p class="mb-0">Locations</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-map-marker-alt fa-2x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small>Different locations</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Company Verification Status</h5>
            </div>
            <div class="card-body">
                <canvas id="verificationChart" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Monthly Company Registrations</h5>
            </div>
            <div class="card-body">
                <canvas id="monthlyCompaniesChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Location Distribution and Recent Companies -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Top Locations</h5>
            </div>
            <div class="card-body">
                @if (Model.Statistics.LocationCounts.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var location in Model.Statistics.LocationCounts.Take(5))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@location.Location</h6>
                                </div>
                                <span class="badge bg-primary">@location.Count companies</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-map-marker-alt fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">No location data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-building me-2"></i>Recent Companies</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentCompanies.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var company in Model.RecentCompanies)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@company.Name</h6>
                                    <small class="text-muted">@company.Location</small>
                                </div>
                                <small class="text-muted">@company.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-building fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">No recent companies found</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Verification Status Chart
            const verificationCtx = document.getElementById('verificationChart').getContext('2d');
            new Chart(verificationCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Verified', 'Unverified'],
                    datasets: [{
                        data: [@Model.Statistics.VerifiedCompanies, @Model.Statistics.UnverifiedCompanies],
                        backgroundColor: ['#28a745', '#ffc107']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Monthly Companies Chart
            const monthlyCompaniesCtx = document.getElementById('monthlyCompaniesChart').getContext('2d');
            new Chart(monthlyCompaniesCtx, {
                type: 'line',
                data: {
                    labels: [@Html.Raw(string.Join(", ", Model.Statistics.MonthlyCompanies.Select(m => $"'{m.Month}'")))],
                    datasets: [{
                        label: 'New Companies',
                        data: [@string.Join(", ", Model.Statistics.MonthlyCompanies.Select(m => m.Count))],
                        borderColor: '#ffc107',
                        backgroundColor: 'rgba(255, 193, 7, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}
